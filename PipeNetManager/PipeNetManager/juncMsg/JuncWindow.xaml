<Window x:Class="PipeNetManager.juncMsg.JuncWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="检查井信息" Height="520" Width="525" ResizeMode="NoResize">
    <Grid>
        <TextBlock  Name="Junc_Name" HorizontalAlignment="Center" Margin="0,0,164,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top"
                RenderTransformOrigin="-2.551,-7.777" Height="35" Width="355" FontSize="20"/>
        <ScrollViewer x:Name="scrolls" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Height="400" Margin="0,40,0,0">
            <ScrollViewer.Content>
                <StackPanel Name="Stackpanel1" HorizontalAlignment="Center" VerticalAlignment="Top" 
                            Orientation="Horizontal" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto">

                </StackPanel>
            </ScrollViewer.Content>
        </ScrollViewer>
        <Button Content="取消" HorizontalAlignment="Left" Margin="355,5,0,0" VerticalAlignment="Top" 
                Width="69" Height="30" Name="Button_Cancle" Click="Button_Cancle_Click"/>
        <Button Content="保存" HorizontalAlignment="Left" Margin="440,5,0,0" VerticalAlignment="Top" 
                Width="69" Height="30" RenderTransformOrigin="0.427,0.233" Name="Button_Save" Click="Button_Save_Click"/>

    </Grid>
</Window>
